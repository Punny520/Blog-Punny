.cover-wrapper
  &#full
    height: 100vh
    margin-bottom: 0 !important
    
    .cover-bg
      position: fixed !important
      background-attachment: fixed !important
      top: 0 !important
      left: 0 !important
      width: 100% !important
      height: 100vh !important
      z-index: -1 !important
      background-size: cover !important
      background-position: center !important
      background-repeat: no-repeat !important

// 导航栏和菜单样式调整
#l_header
  background: transparent !important
  
  .nav-main
    background: rgba(255, 255, 255, 0) !important
    box-shadow: none !important
    
    // 主标题
    .title
      color: #ffffff !important
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) !important
    
    // 导航菜单
    .nav-sub .menu > li > a
      color: #ffffff !important
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) !important
      font-weight: bold !important
      
      &:hover
        color: #f2f2f2 !important
        background: rgba(255, 255, 255, 0.1) !important
    
    // 下拉菜单
    .menu .list-v
      background: rgba(0, 0, 0, 0.7) !important  // 半透明深色背景
      
      .list-v a
        color: #ffffff !important
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) !important
        
        &:hover
          color: #f2f2f2 !important
          background: rgba(255, 255, 255, 0.1) !important

// 额外添加的菜单样式
.l_header
  .menu
    .nav-list-h > li
      color: #ffffff !important  // 顶部菜单项文字颜色
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) !important
      
      > a
        color: #ffffff !important
        
        &:hover
          color: #f2f2f2 !important
    
    ul.list-v
      li
        a
          color: #ffffff !important
          text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) !important
          
          &:hover
            color: #f2f2f2 !important
            background: rgba(255, 255, 255, 0.1) !important
    
    // 搜索图标等其他图标
    .nav-sub .m_search .form i
      color: #ffffff !important

// 页脚样式调整
footer.footer
  color: #ffffff !important
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) !important
  background: transparent !important  // 移除背景色
  
  // 页脚链接
  a
    color: #ffffff !important
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) !important
    
    &:hover
      color: #f2f2f2 !important
      text-decoration: underline !important
  
  // 版权信息
  .copyright
    color: #ffffff !important
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) !important
    
    p
      color: #ffffff !important
  
  // 社交媒体图标
  .social-wrapper
    a.social
      color: #ffffff !important
      opacity: 0.9 !important
      
      &:hover
        color: #f2f2f2 !important
        opacity: 1 !important
        background: rgba(255, 255, 255, 0.1) !important

// 文章列表样式
.post-wrapper
  .post
    background: rgba(108, 130, 157, 0.8) !important  // 傍晚蓝灰色，带透明度
    backdrop-filter: blur(10px)  // 磨砂玻璃效果
    border: 1px solid rgba(255, 255, 255, 0.1)  // 微妙的边框
    
    // 文章标题颜色
    h1.title
      color: #ffffff !important
      text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3) !important
    
    // 文章内容颜色
    .article-meta
      color: rgba(255, 255, 255, 0.9) !important
      
      .new-meta-box
        .new-meta-item
          color: rgba(255, 255, 255, 0.9) !important
          
          a
            color: rgba(255, 255, 255, 0.9) !important
            
            &:hover
              color: #ffffff !important